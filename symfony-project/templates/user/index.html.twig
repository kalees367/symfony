{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}



{% block body %}

   
    <h1>{{ 'Users List'|trans }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">{{ 'First Name'|trans }}</th>
                <th scope="col"> {{ 'Last name'|trans }}</th>
                <th scope="col"> {{ 'Email'|trans }}</th>
                <th scope="col"> {{ 'Mobile'|trans }}</th>
                <th scope="col" class="text-right"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in data %}
            <tr>
                <td>{{ user.FirstName   }}</td>
                <td>{{ user.lastName}}</td>
                <td>{{ user.email}}</td>
                 <td>{{ user.mobile}}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="show/{{ user.id }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'show'|trans }}
                        </a>

                        <a href="edit/{{ user.id }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'edit'|trans }}
                        </a>
                        <a href="delete/{{ user.id }}" class="btn btn-sm btn-danger">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'delete'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'No UserS Found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
   
{% endblock %}